#!/usr/bin/env bash

if command -v pacman -Qu > /dev/null; then
    n_updates=$(pacman -Qu | wc -l)
    if [[ n_updates -gt 150 ]]; then
        color='red'
    elif [[ n_updates -gt 50 ]]; then
        color='yellow'
    else
        color='gray'
    fi
    echo "<span color='$color'>ï‚«</span> $n_updates"
fi
