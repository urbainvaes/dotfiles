" Command to open files
filetype * xdg-open
filetype *.exe wine

" Options
set fastrun
set history=100
set incsearch
set runexec
set sortnumbers
set scrolloff=2
set smartcase
set vicmd=$EDITOR
set relativenumber
set vimhelp
set wildmenu

" Commands
command! backup !cp -r %f %f.bak

" Mappings
nnoremap s :shell<cr>
nnoremap w :view<cr>
nnoremap o :file<cr>
nnoremap b :marks<cr>
nnoremap gm :bmark<space>
nnoremap gb :bmarks<cr>
nnoremap g<cr> :!nvim %f<cr>
nnoremap r :run<cr>
nnoremap ,b :backup<cr>
nnoremap ,r :%rename<cr>
nnoremap ,t :!urxvt &<cr>
nnoremap ,l :!less %f<cr>
nnoremap <c-d> :q<cr>
nnoremap <c-l> <c-w>l
nnoremap <bs> <c-w>h

" To disable automatic tagging of search results
nnoremap coh :set hlsearch!<cr>

" Colorscheme
source /usr/share/vifm/colors/juef-zenburn.vifm

" Only one pane
only

" vim: ft=vim
